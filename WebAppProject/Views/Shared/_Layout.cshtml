@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebAppProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css"> <!--login & footer css-->
    <link rel="stylesheet" href="~/css/UserCreate.css"> <!--register css-->
    <link rel="stylesheet" href="~/css/OverviewDesign.css"> <!--ManagerOverview css-->

    <script src="@Url.Content("~/js/jquery-3.5.1.min.js")"></script>

    <script src="https://d3js.org/d3.v5.min.js"></script> <!--3djs-->

    <script src="https://kit.fontawesome.com/a076d05399.js"></script> <!--icons library link-->
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a href="#"><i class="fas fa-home"></i></a>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            string userFirstName = Context.Session.GetString("FirstName");

                            if (userFirstName != "null")
                            {
                                <li class="nav-link text-dark">
                                    <b>Hello, @userFirstName</b>
                                </li>
                            }
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ManagerOverview" asp-action="Index">My Transactions</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                New Transaction
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" asp-controller="WaterTransactions" asp-action="Create">Water Transaction</a>
                                <a class="dropdown-item" asp-controller="ElectricityTransactions" asp-action="Create">Electricity Transaction</a>
                                <a class="dropdown-item" asp-controller="PropertyTaxTransactions" asp-action="Create">Property Tax Transaction</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ContactApplications" asp-action="Index">My Contact Applications</a>
                        </li>

                        @{
                            if (userFirstName != "null")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="LogOff">Log Off <i class="fas fa-door-open"></i></a>
                                </li>
                            }
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @{
        var isHomePage = ViewData["isHomePage"];

        if (ViewData["isHomePage"] != null)
        {
            if (isHomePage.Equals("true"))
            {
                <div style="
                    background-image: url(@Url.Content("~/FrontEndElements/LoginPage/city-network.jpg"));
                    background-position: center center;
                    background-size: cover;
                    width: 100%;
                    height: 100%;
                    ">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            }
        }
        else
        {
               <div style="
                    background-image:url(@Url.Content("~/FrontEndElements/DefaultOverview/default-background3.jpg"));
                    background-position: center center;
                    background-size: cover;
                    width: 100%;
                    height: 100%;
                    ">
                  <main role="main" class="pb-3">
                        @RenderBody()
                   </main>
               </div>
        }
    }

    <footer>
        <div class="footer-content">
            <div class="footer-section about">
                <h2 class="logo-text"><span>HOLDERS </span>Ltd. </h2>
                <p style="color: white;">
                    HOLDERS is a website that does all the billing exchange for you
                    such as Water, Electricity and Property Taxes.
                    <br><br> It doesn't matter wheter you are an entering tenant or an exiting tenant.
                    HOLDERS will do the job for you!
                </p>

                <div class="contact">
                    <span><i class="fas fa-phone"></i> &nbsp; 123-456-789</span>
                    <span><i class="fas fa-envelope"></i> &nbsp; info@holders.com</span>
                </div>
                <div class="socials">
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                </div>
            </div>

            <div class="footer-section contact-form">
                <h2>Contact us</h2>
                <form action="index.html" method="post">
                    <input type="email" name="email" class="text-input contact-input" placeholder="Your email address"><br>
                    <textarea name="message" class="text-input contact-input" placeholder="Write here your message"></textarea><br>
                    <button type="submit" class="btn btn-big">
                        <i class="fas fa-envelope"></i>
                        Send
                    </button>
                </form>
            </div>
        </div>

        <div class="footer-bottom">
            &copy; HOLDERS Ltd. | Designed by Omer Kappon, Chen Benjamin, Yossi Ashkenazi, Yarin Gridish
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
